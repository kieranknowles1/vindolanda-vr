\ProvidesPackage{tableext}

% Fancy header for a longtable
% 1: Header row, included on every page
% 2: Width in cells
%
% Usage:
%  \begin{...}{...}
%   \caption{...}
%   \longtablehead{header}{cell count}
%   \contents
%   \bottomrule
%  \end{...}
\newcommand{\longtablehead}[2]{%
  \toprule#1\\\midrule\endfirsthead
  \multicolumn{#2}{c}{Continued from last page}\\\toprule#1\\\midrule\endhead
  \bottomrule\multicolumn{#2}{r}{Continued on next page}\endfoot
  \endlastfoot
}
